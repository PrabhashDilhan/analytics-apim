<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<scenarioConfiguration  domain="APIMAnalytics" name="APIRequestPatternChangeAnalysisMetric" scenario="RequestPatternChangeDetection">
	<description>Detection of request pattern changes</description>
	<parameterMap>
		<entry>
			<key>regularAPITransitions</key>
			<value>1</value>
		</entry>
		<entry>
			<key>requestCount</key>
			<value>500</value>
		</entry>
		<entry>
			<key>probabilityThreshold</key>
			<value>0.95</value>
		</entry>
		<entry>
			<key>alertSuppressionPeriod</key>
			<value>30*60*1000</value>
		</entry>
		<entry>
                        <key>cacheTimeout</key>
                        <value>300</value>
                </entry>
        	<entry>
            		<key>severity</key>
			<value>1</value>
        	</entry>
	</parameterMap>
</scenarioConfiguration>
